<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textGrundlinie"
        android:layout_width="105dp"
        android:layout_height="37dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:text="Grundlinie: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="51dp" />

    <TextView
        android:id="@+id/textHöhe"
        android:layout_width="66dp"
        android:layout_height="38dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Höhe: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGrundlinie" />

    <EditText
        android:id="@+id/editTextGrundlinie"
        android:layout_width="175dp"
        android:layout_height="42dp"
        android:layout_marginStart="60dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textHöhe"
        tools:layout_editor_absoluteY="98dp" />

    <EditText
        android:id="@+id/editTextHöhe"
        android:layout_width="177dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textGrundlinie"
        tools:layout_editor_absoluteY="51dp" />

</androidx.constraintlayout.widget.ConstraintLayout>